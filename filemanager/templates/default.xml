<?xml version="1.0" encoding="UTF-8"?>
<template engine="acte" format="html">
	<pageTitle></pageTitle>
	<script></script>
	<block type="container" name="body">
		<block type="col twothirds">
			<widget name="articlePreview" dataSource="article">
				<a href="/article/{$id}/{$title}">
					<div class="topBar"><strong>Newest article</strong> | <node name="create_date"/></div>
					<img src="{$image}" alt=""/>
					<div class="info"><h3><node name="title"/></h3><p><node name="abstract"/></p></div>
				</a>
			</widget>
		</block>
	</block>
</template>
