<view xmlns="http://asyncode.com/View"
	xmlns:db="http://asyncode.com/DataBase" xmlns:f="http://asyncode.com/filesystem">
	<db:add name="news" component="database">
		select title,lang,date_trunc('minute',create_date) as create_date,content from optimizeyourcode.news where draft is false ORDER BY create_date DESC offset 0 limit 2
	</db:add>
	<db:add name="article" component="database" condition="2 is 2">
		select image,id,title,date_trunc('minute',create_date) as create_date,abstract from optimizeyourcode.articles where id=12
		<!--draft is false order by create_date DESC offset 0 limit 1-->
	</db:add>
	
