	<add name="siteMap">

		<category langElement="news">
			<item langElement="allNews" link="/news"/>
		</category>
		<category langElement="siteSpecific">
			<item langElement="aboutSite" link="/about"/>
			<item langElement="aboutMe" link="/aboutMe"/>
			<item langElement="contact" link="/contact"/>
			<item langElement="links" link="/links"/>
		</category>
	</add>

	<add name="layout"><![CDATA[
		<pageTitle langElement="defaultPage"/>
		<block type="container" name="body">
			<block type="col twothirds">
				<widget name="articlePreview" type="template" datasource="article">
					<a href="/article/">
						<pars for="href"><node name='id'/>/<node name='title'/></pars>
						<div class="topBar"><strong>Newest article</strong> | <node name="create_date"/></div>
						<img src="" alt="">
							<pars for="src">
								<node name="image"/>
							</pars>
						</img>
						<div class="info"><h3><node name="title"/></h3><p><node name="abstract"/></p></div>
					</a>
				</widget>
			</block>
		</block>]]>
	</add>
