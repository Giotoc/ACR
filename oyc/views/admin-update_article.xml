<?xml version="1.0" encoding="UTF-8"?>
<view>
	<inputs>
		<post name="id" type="number"/>
		<post name="title"/>
		<post name="lang"/>
		<post name="image"/>
		<post name="abstract" default="null"/>
		<post name="content"/>
		<post name="draft" default="f"/>
		<post name="langid" default="null"/>
	</inputs>
	<conditions>

	</conditions>
	<actions>
		<action name="articleAdded" component="database">
update articles set
	title='{$title}',
	lang='{$lang}',
	image='{$image}',
	modification_date=now(),
	abstract='{$abstract}',
	content='{$content}',
	draft='{$draft}',
	langid='{$langid}'
where id={$id}
		</action>
		<action component="headers">
			<redirect location="/article/{$id}"/>
		</action>
	</actions>
<!--	<output>

	</output>-->
</view>
