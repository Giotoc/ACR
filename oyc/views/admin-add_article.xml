<?xml version="1.0" encoding="UTF-8"?>
<view>
	<inputs>
		<post name="title"/>
		<post name="lang"/>
		<post name="abstract" default="null"/>
		<post name="content"/>
		<post name="draft" default="f"/>
		<post name="langid" default="null"/>
	</inputs>
	<conditions>

	</conditions>
	<actions>
		<action name="articleAdded" component="database">
			insert into articles (title,lang,abstract,content,draft,langid)
			values ('{$title}','{$lang}','{$abstract}','{$content}','{$draft}','{$langid}')
		</action>
	</actions>
<!--	<output>

	</output>-->
</view>
