	<define name="producent_product" command="db:query">
		select product.name as productname, producent.name as producentname from market.product inner join market.producent on producent.id = product.producent where product.producent = {$id}
	</define>
	<define name="product_producent" command="db:query">
		select product.name as productname, producent.name as producentname, producent.card, producent.link from market.product inner join market.producent on producent.id = product.producent where product.id = {$id}
	</define>
	<define name="producent" command="db:query">
		select * from market.producent where id = {$id}
	</define>
	<define name="product" command="db:query">
		select * from market.product where id = {$id}
	</define>
	<define name="todo" command="db:query">
