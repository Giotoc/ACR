<view xmlns="http://asyncode.com/View"
	xmlns:fs="http://asyncode.com/filesystem"
	xmlns:h="http://asyncode.com/headers">
	<post>
		<param name="viewName"/>
	</post>
	<set name="fileCreated" command="fs:create" fs:path="/views/{$viewName}.xml">
		<![CDATA[<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://asyncode.com/View">
	<param name="name"/>
	<define name="" command="">
	</define>
</view>
]]>
	</set>
	<define command="h:redirect" h:location="/IDE:editView" condition="rs::fileCreated is 'ok'"/>
</view>
