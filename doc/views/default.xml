  <define name="tags" command="db:query">
    select * from (select * from tags ORDER BY popularity DESC offset 0 limit 15) as subquery ORDER By tag
  </define>
  <define name="layout">
    <![CDATA[<pageTitle>Main page</pageTitle>
    <block type="container" name="tags">
      <widget name="tagsCloud" type="list" datasource="tags">
        <template>
          <a href="/article/" class="tag">
            <pars for="href"><node name='id'/>/<node name='title'/></pars>
            <pars for="class"><node name="popularity"/></pars>
            <node name="tag"/>
          </a>&#160;
        </template>
      </widget>
    </block>]]>
  </define>
</view>
